{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "FRC-DataFactory"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/SB3_AZRSQL_TO_Excel')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Copia dados do SB3 SQL Azure para o Excel - formato CSV",
				"activities": [
					{
						"name": "Copia dados do SQL SB3 Azure para uma planilha Excel",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Contexto",
								"value": "0"
							}
						],
						"typeProperties": {
							"source": {
								"type": "AzureSqlSource",
								"sqlReaderQuery": {
									"value": "SELECT top(500) \n    a.ID_CALL_HD,\n    a.ID_CALL_ATTACH,\n    ch.ID_SEC_CONTEXT,\n    ch.DT_CALL_OPENING,\n    ch.ID_CUSTOMER,\n    REPLACE(ch.TX_CALL_DESCRIPTION,CHAR(10),' , ') as TX_CALL_DESCRIPTION,\n    a.TX_FILE_NAME,\n    a.TX_FILE_PATH,\n    ch.YEAR,\n    ch.DT_MES\nFROM @{concat('[bdlegadosb3].[',variables('vTableAnexos'),']')} as a \nLEFT JOIN @{concat('[bdlegadosb3].[',variables('vTableChamados'),']')} AS ch \n\tON ch.ID_CALL_HD = a.ID_CALL_HD \nWHERE ch.DT_MES = @{variables('vMes')} AND ch.YEAR = @{variables('vAno')} \nORDER BY ch.DT_CALL_OPENING ASC",
									"type": "Expression"
								},
								"queryTimeout": "02:00:00",
								"partitionOption": "None"
							},
							"sink": {
								"type": "DelimitedTextSink",
								"storeSettings": {
									"type": "FileServerWriteSettings"
								},
								"formatSettings": {
									"type": "DelimitedTextWriteSettings",
									"quoteAllText": true,
									"fileExtension": ".txt"
								}
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
								"referenceName": "SB3_AzureSQL",
								"type": "DatasetReference",
								"parameters": {
									"tbName": {
										"value": "@concat('tbCtx',variables('vContexto'))",
										"type": "Expression"
									}
								}
							}
						],
						"outputs": [
							{
								"referenceName": "SB3_CSV",
								"type": "DatasetReference",
								"parameters": {
									"cvs_fileName": {
										"value": "@concat('SB3_CVS_CTXT',variables('vContexto'),'_',variables('vAno'),'_',variables('vMes'),'.csv')\n",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"variables": {
					"vContexto": {
						"type": "String",
						"defaultValue": "02"
					},
					"vTableChamados": {
						"type": "String",
						"defaultValue": "tbCtx02"
					},
					"vAno": {
						"type": "String",
						"defaultValue": "2020"
					},
					"vMes": {
						"type": "String",
						"defaultValue": "1"
					},
					"vTableAnexos": {
						"type": "String",
						"defaultValue": "tbCtx02_Anexos"
					}
				},
				"folder": {
					"name": "SB3"
				},
				"annotations": []
			},
			"dependsOn": []
		}
	]
}